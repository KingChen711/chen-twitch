generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  clerkId  String  @unique
  username String  @unique
  imageUrl String  @db.String
  bio      String? @db.String

  followers  Follow[] @relation("FollowedBy")
  followings Follow[] @relation("Following")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Follow {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  followedId String @db.ObjectId
  followerId String @db.ObjectId

  follower User @relation(name: "Following", fields: [followerId], references: [id])
  follwed  User @relation(name: "FollowedBy", fields: [followedId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([followedId, followerId])
  @@index([followedId])
  @@index([followerId])
}
